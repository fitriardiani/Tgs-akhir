<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:background="#877054"
    tools:context="com.example.ardiani.myapplication.tambahKelahiran">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="Tambah Data Kelahiran \n Sapi"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textColor="#0b0f12"
        android:fontFamily="serif"/>

    <EditText
        android:id="@+id/editTextRf"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginTop="85dp"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:ems="10"
        android:inputType="text"
        android:hint=" UID RFID"
        android:textColorHint="#054D44"
        android:fontFamily="sans-serif" />

    <EditText
        android:id="@+id/editTextTL"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginTop="140dp"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:ems="10"
        android:inputType="date"
        android:hint="Tanggal Lahir"
        android:textColorHint="#054D44"
        android:fontFamily="sans-serif" />

    <EditText
        android:id="@+id/editTexNP"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginTop="195dp"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:ems="10"
        android:inputType="text"
        android:hint="Petugas"
        android:textColorHint="#054D44"
        android:fontFamily="sans-serif" />

    <EditText
        android:id="@+id/editTextKet"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginTop="250dp"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:ems="10"
        android:inputType="text"
        android:hint="Keterangan"
        android:textColorHint="#054D44"
        android:fontFamily="sans-serif" />

    <EditText
        android:id="@+id/editTextJK"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginTop="305dp"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:ems="10"
        android:inputType="text"
        android:hint="Jenis Kelamin"
        android:textColorHint="#054D44"
        android:fontFamily="sans-serif"
        android:background="@android:drawable/editbox_background_normal"/>

    <Button
        android:id="@+id/btn_tambah"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="400dp"
        android:background="#e2d1aa"
        android:text="Tambah Data"
        android:textSize="17sp"
        android:textAllCaps="false"
        android:fontFamily="sans-serif"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>
