<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:background="#49b2cf"
    tools:context="com.example.ardiani.myapplication.tambahInseminasi">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:text="Tambah Data Inseminasi"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="#040505"
        android:fontFamily="serif"/>

    <EditText
        android:id="@+id/editTextUid"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:ems="10"
        android:inputType="text"
        android:hint=" UID RFID"
        android:textColorHint="#054D44"
        android:fontFamily="sans-serif" />

    <EditText
        android:id="@+id/editTexttgl"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginTop="155dp"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:ems="10"
        android:inputType="date"
        android:hint="Tanggal Inseminasi (yyyymmdd)"
        android:textColorHint="#054D44"
        android:fontFamily="sans-serif" />

    <EditText
        android:id="@+id/editTextKose"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginTop="210dp"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:ems="10"
        android:inputType="text"
        android:hint=" Kode Segmen"
        android:textColorHint="#054D44"
        android:fontFamily="sans-serif" />

    <EditText
        android:id="@+id/editTextPetugas"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginTop="265dp"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:ems="10"
        android:inputType="text"
        android:hint=" Petugas"
        android:textColorHint="#054D44"
        android:fontFamily="sans-serif" />

    <Button
        android:id="@+id/btnTambah1"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="400dp"
        android:background="#e2d1aa"
        android:text="Tambah Data"
        android:textSize="17sp"
        android:textAllCaps="false"
        android:fontFamily="sans-serif"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
